config = ''


manifest {
    homePage = 'https://github.com/h3abionet/chipimputation/'
    description = ''
    mainScript = 'imputation.nf'
}

params {
    // Directories
    homedir                 = "${HOME}/imputation/chipimputation"
    output_dir              = "/mnt/lustre/users/mmbiyavanga/imputation"
    impute_result           = "${output_dir}/impute_results"
    scripts                 = "${params.homedir}/scripts"

    // Reference panel 1
    ref_dir_1                 = "/mnt/lustre/users/mmbiyavanga"
    ref_1_name              = '1KG'
    ref_hapFile_1           = "${ref_dir_1}/DATA_1000GP/HAPS/1000GP_Phase3/1000GP_Phase3_chr%s.hap.gz"
    ref_legendFile_1        = "${ref_dir_1}/DATA_1000GP/HAPS/1000GP_Phase3/1000GP_Phase3_chr%s.legend.gz"
    ref_mapFile_1           = "${ref_dir_1}/DATA_1000GP/HAPS/1000GP_Phase3/genetic_map_chr%s_combined_b37.txt"
    ref_sampleFile_1        = "${ref_dir_1}/DATA_1000GP/HAPS/1000GP_Phase3/1000GP_Phase3.sample"
    
    // Reference panel 2
    ref_dir_2               = "/mnt/lustre/users/mmbiyavanga"
    ref_2_name              = 'CBIO'
    ref_hapFile_2           = "${ref_dir_2}/AFRICA_CHIP/CHIP_FINAL_SET_SEPT_2016/REF_IMPUTE_H3A/VCF_CBIO_SANGER/CBIO/h3a_chr%s.hap.gz"
    ref_legendFile_2        = "${ref_dir_2}/AFRICA_CHIP/CHIP_FINAL_SET_SEPT_2016/REF_IMPUTE_H3A/VCF_CBIO_SANGER/CBIO/h3a_chr%s.legend.gz"
    ref_mapFile_2           = "${ref_dir_2}/DATA_1000GP/HAPS/1000GP_Phase3/genetic_map_chr%s_combined_b37.txt"
    ref_sampleFile_2        = "${ref_dir_2}/AFRICA_CHIP/CHIP_FINAL_SET_SEPT_2016/REF_IMPUTE_H3A/VCF_CBIO_SANGER/CBIO/h3a.samples"
    
    eagle_genetic_map       = "${ref_dir_1}/reference/eagle/tables/genetic_map_hg19_withX.txt.gz"

    // chunk size in base
    NE                      = "20000"
    impute_iter             = "10"
    impute_burnin           = "2" // must be less than impute_burnin
    impute_info_cutoff      = "0.8"
    chunk_size              = "1000000"

    // Data in PLINK bed format
    bedFile                 = "${output_dir}/data/raw/SAN_HGDP_consensus_snpeff_dbsnp.bed"
    famFile                 = "${output_dir}/data/raw/SAN_HGDP_consensus_snpeff_dbsnp.fam"
    bimFile                 = "${output_dir}/data/raw/SAN_HGDP_consensus_snpeff_dbsnp.bim"
//    chromosomes             = "ALL"
    chromosomes             = "22"

    // Plink QC parameters
    cut_mind                = "0.05"

    // Phasing method: shapeit (default) or eagle2
    phasing_method          = "eagle"

}

executor{
    jobName = { "$task.tag" }
}

profiles {
    // For execution on a local machine, no containerization. -- Default
    standard {
        process.executor = 'local'
    }
    local {
        params {
            //threadCounts = [ 4 ]
            //alignThreads = 4
            resultsDir = "results"
        }

        executor {
            name = "local"
            //cpus = 4
        }
        docker {
            enabled = false
        }
    }
    // For execution on a PBS scheduler, no containerization.
    pbs {
        process{
            executor        = 'pbs'
            queue           = 'UCTlong'
            memory          = 2.GB
            cpus            = 1
            time            = 1.h
            maxRetries      = 10
            maxErrors       = 10000
//            errorStrategy   = 'retry'
            errorStrategy   = { if (task.exitStatus == 143) { 'retry' } else if (task.exitStatus == 140 ) { 'retry' } else if (task.exitStatus == 137 ) { 'retry' } else { 'terminate' } }
        }
    }
}

workflow.onComplete = {
    println "========================================="
    println "Pipeline completed at: $workflow.complete"
    println "Execution status: ${ workflow.success ? 'OK' : 'failed' }"
}
