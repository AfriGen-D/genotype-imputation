runcmd:
  - dpkg --configure -a
  - systemctl start docker
  - docker run -d swarm --advertise="$(ip addr show $(ip route show match 0.0.0.0|sed 's/.*dev *\([^ ]*\).*/\1/') |grep 'inet '|sed 's/.*inet \([^\/]*\)\/.*/\1/'):2375" "consul://___CONSUL_IP___:8500"
merge_type: 'list(append)+dict(recurse_array)+str()'
